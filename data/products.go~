package data

import "time"

//Product defines structure for an API product
//
type Product struct {
    ID         int
    Name       string
    Description string
    Price      float32
    SKU        string
    CreatedOn  string
    UpdatedOn  string
    DeletedOn  string

}


fun GetProducts() []*Product {
  return productList
}

var productList = []*Product{
    &Product{
        ID:          1,
        Name:        "Latte",
        Description: "Frothy milky coffee",
        Price:       2.45,
        SKU:         "abc323",
        CreatedOn:   time.Now().UTC().String(),
        UpdatedOn:   time.Now().UTC().String(),

    },
    &Product{
        ID:          2,
        Name:        "Espresso",
        Description: "Short and strong coffee wwithout milk",
        Price:       1.99,
        SKU:         "fje565",
        CreatedOn:   time.Now().UTC().String(),
        UpdatedOn:   time.Now().UTC().String(),

    },




}
